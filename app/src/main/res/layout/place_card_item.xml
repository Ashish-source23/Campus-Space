<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorOnBackground"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_place_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ðŸ“š" />

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/chip_crowd_level"
            app:layout_constraintStart_toEndOf="@id/tv_place_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Central Library" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_crowd_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_expand"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Low" />

        <ImageButton
            android:id="@+id/btn_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_down"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_place_name"
            android:contentDescription="Expand details" />

        <TextView
            android:id="@+id/tv_place_location"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-30dp"
            android:drawableStart="@drawable/ic_map_pin"
            android:drawablePadding="2dp"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBodySmall"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_place_name"
            app:layout_constraintTop_toBottomOf="@id/tv_place_name"
            tools:text="Building A, Floor 2" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_distance_info"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textAppearance="?attr/textAppearanceBodySmall"-->
        <!--            android:textColor="?attr/colorPrimary"-->
        <!--            android:textStyle="bold"-->
        <!--            app:layout_constraintStart_toEndOf="@id/tv_place_location"-->
        <!--            app:layout_constraintBottom_toBottomOf="@id/tv_place_location"-->
        <!--            app:layout_constraintTop_toTopOf="@id/tv_place_location"-->
        <!--            tools:text="350 m away" />-->

        <ProgressBar
            android:id="@+id/progress_occupancy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/tv_occupancy_ratio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place_location"
            tools:progress="22"/>

        <TextView
            android:id="@+id/tv_occupancy_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/progress_occupancy"
            app:layout_constraintBottom_toBottomOf="@id/progress_occupancy"
            tools:text="45/200" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_amenities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_occupancy"/>

        <LinearLayout
            android:id="@+id/expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/chip_group_amenities"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/tv_available_spots_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:drawableStart="@drawable/ic_users"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Available Spots: 155 (45 / 200)" />
            <TextView
                android:id="@+id/tv_distance_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:drawableStart="@drawable/ic_map_pin"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Distance: 350 m" />
            <Button
                android:id="@+id/btn_view_on_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorSearchButton"
                android:layout_marginTop="12dp"
                android:text="View on Map" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>