<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".activities.MainActivity">

    <!-- THIS IS THE VIEW THE CODE IS LOOKING FOR -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Welcome, user@example.com"
        android:layout_marginBottom="20dp" />

    <!-- AND THIS IS THE SECOND VIEW THE CODE IS LOOKING FOR -->
    <TextView
        android:id="@+id/locationStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Permissions Pending..."
        android:textSize="16sp" />

</LinearLayout>
